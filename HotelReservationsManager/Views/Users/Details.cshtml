@model Hotel_Reservations_Manager.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container">
    <h2>User Details</h2>

    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h4>@Model.FirstName @Model.MiddleName @Model.LastName</h4>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.EGN" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">EGN:</dt>
                        <dd class="col-sm-8">@Model.EGN</dd>

                        <dt class="col-sm-4">First Name:</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4">Middle Name:</dt>
                        <dd class="col-sm-8">@Model.MiddleName</dd>

                        <dt class="col-sm-4">Last Name:</dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4">Username:</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone Number:</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>

                        <dt class="col-sm-4">Hire Date:</dt>
                        <dd class="col-sm-8">@Model.HireDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Active)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>

                        @if (!Model.Active && Model.ReleaseDate.HasValue)
                        {
                            <dt class="col-sm-4">Release Date:</dt>
                            <dd class="col-sm-8">@Model.ReleaseDate.Value.ToString("yyyy-MM-dd")</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-end">
                <a asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-warning me-2">Change Password</a>
                <a asp-action="Delete" asp-route-id="@Model.EGN" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>